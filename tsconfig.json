{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleDetection": "force",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "types": [
      "bun",
      "node",
      "reflect-metadata"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@controller/*": [
        "src/controllers/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "jest.config.js",
    "scripts",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}