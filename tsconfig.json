{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "types": [
      "node",
      "reflect-metadata"
    ],
    "lib": [
      "ES6"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@controller/*": [
        "src/controllers/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}